<div class="container">
  <div class="row">
    <h1>Index de mes cartes !</h1>
    <% if @cards %>
      <% @cards.each do |card| %>
        <p>Q: <%= card.question %></p>
        <p>A: <%= card.answer %></p>
        <p><%= card.tag_list if card.tag_list != [] %></p>
        <%= link_to ">>", edit_card_path(card), class:''%>
        <%= link_to "X", card_path(card), method: :delete, class:''%>
      <% end %>
    <% end %>
    
    <br>
    <p><%= @cards.length %></p>
    <%= link_to "Ajouter une carte", new_card_path, class:'btn btn-primary'%>
    <%= link_to "Faire le test",'test', class:'btn btn-success'%>
  </div>
  
</div>
