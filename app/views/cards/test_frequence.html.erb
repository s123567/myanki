<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h1>Le test de la r√©currence <%=params[:filter] %></h1>
      <div id="question">

          <%= @card.question %>

      </div>
        <br>
          <label for="answer"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></label>
          <input type=radio id="answer" name="group">
          <span id="content">
          <% if @card.picture? %>
            <%= image_tag @card.picture.url %>
            <% else %>
            <%= @card.answer %>
          <% end %>
          </span>
          
          <br>
            <%= will_paginate @cards , renderer: BootstrapPagination::Rails %>    
    </div>

  </div>
  <div class="text-center space-updown">
    <%= link_to cards_path,class:'btn-green' do %><span class="fa fa-arrow-right fa-1x"></span> Accueil <% end %>

  </div>
</div>